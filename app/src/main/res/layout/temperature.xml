<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestTemperatura">

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:text="Test temperatury. Naciśnij przycisk, aby rozpocząć / zatrzymać monitorowanie temperatury"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_start_stop"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="START"
        android:textSize="20sp"
        android:layout_below="@id/text_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_stop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Aktualna temperatura: "
        android:textSize="18sp"/>
</RelativeLayout>
