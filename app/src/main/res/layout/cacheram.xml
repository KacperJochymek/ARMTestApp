<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestTablica"
    android:gravity="center">

    <TextView
        android:id="@+id/text_memory_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Kliknij przycisk, aby przetestować operacje odczytu i zapisu do pamięci RAM."
        android:textSize="18sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_test_memory"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Testuj RAM"
        android:textSize="17sp"
        android:layout_below="@id/text_memory_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_memory_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_test_memory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Wynik: "
        android:textSize="18sp"/>
</RelativeLayout>
